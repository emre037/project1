    <script>


        $(document).ready(function () {
            var calendar = $('#calendar').fullCalendar({
                editable: true,
                customButtons: {
                    myCustomButton: {
                        text: 'plugin aanpassingen weergeven',
                        click: function () {
                            window.location.href = '/calendar/index';

                        }
                    },

                },
                header: {
                    left: 'prev,next today myCustomButton',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                events: '/calendar/watch',
                selectable: true,
                selectHelper: true,
                displayEventTime: false,
                eventBackgroundColor: '#222222',
                eventBorderColor: 'black',
                eventTextColor: 'white',
                trigger: 'hover',
                eventLimit: true, // for all non-agenda views
                views: {
                    agenda: {
                        eventLimit: 6 // adjust to 6 only for agendaWeek/agendaDay
                    }
                },


                eventClick: function (info, calEvent, jsEvent, view, modal) {


                    // var start = $.fullCalendar.formatDate(info.start, "Y-m-d H:i:s" , 1648118112);
                    {# var datum = {{ i.start | date("Y-m-d" ,"Europe/Paris") }}; #}
                    var options = {
                        weekday: 'long',
                        month: 'long',
                        day: 'numeric',
                        hour: 'numeric',
                        minute: 'numeric',
                        second: 'numeric'
                    };
                    var datum = new Date(info.start);
                    var object_name = info.object_name;
                    var event_type = info.event_type;
                    var value = info.event_file_path;

                    $("#fullCalModal").dialog({modal: true, title: info.title, width: 750, height: 550});
                    $('#ev_start').html('datum: ' + datum.toLocaleDateString("nl-NL", options));
                    $('#ev_title').html(info.title + ' ' + info.message);
                    $('#ev_message').html('bestand locatie: ' + value);
                    $('#ev_objectType').html('soort actie uitgevoerd: ' + info.title + ' ' + info.message);


                },
                eventRender: function (info, element) {
                    var options = {hour: 'numeric', minute: 'numeric'};
                    var datum = new Date(info.start);
                    element.addClass('eventText').html(info.title + ' ' + info.message + ' ' + datum.toLocaleTimeString("nl-NL", options));
                },

                eventMouseover: function (event, jsEvent, view) {
                    var value = event.event_file_path;
                    var fileName = value.substring(43);
                    var options = {
                        weekday: 'long',
                        month: 'long',
                        day: 'numeric',
                        hour: 'numeric',
                        minute: 'numeric',
                        second: 'numeric'
                    };
                    var datum = new Date(event.start);

                    $(jsEvent.currentTarget).tooltip({
                        items: jsEvent.currentTarget,
                        content: function () {
                            return '<div style="font-size: 16px"> <b>'  + event.title + ' ' + event.message + '</div></b><b style="font-size: 16px">&nbsp;&nbsp;&nbsp; Bestandsnaam:' + '</b><p style="font-size: 15px"> &nbsp;&nbsp;&nbsp;&nbsp;' + fileName
                                + '</p>&nbsp;&nbsp;&nbsp; <b>' +
                             ' Op: </b>' + datum.toLocaleTimeString("nl-NL", options)
                        }
                    });
                },

            });

        });


    </script>
